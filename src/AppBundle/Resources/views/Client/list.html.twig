{% extends 'AppBundle::base.html.twig' %}

{% block title parent() ~ ' - ' ~ 'client-list.meta-title'|trans %}

{% block header %}
    <section id="content">
        <div class="content__header">
            <h2>Clients</h2>
        </div>
    </section>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card__header action-header">
            <div class="action-header__label">Liste des clients</div>
            <a href="{{ path('clients_add') }}" class="btn btn--float"><i class="zmdi zmdi-plus"></i></a>
        </div>
        <div class="card__body m-t-30">
            <div class="card__body">
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Company</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th class="text-right">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                <td>{{ client.company }}</td>
                                <td>{{ client.name }}</td>
                                <td>{{ client.address.city }}</td>
                                <td class="text-right">
                                    <a href="{{ path('clients_view', {'id': client.id}) }}" class="btn btn--light">DÃ©tails</a>
                                    <a href="{{ path('clients_edit', {'id': client.id}) }}" class="btn btn-default">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
