{% extends 'AppBundle::base-empty.html.twig' %}

{% block title parent() ~ ' - Sign In' %}

{% block body %}
    <div class="login">
        <div class="login__block toggled" id="l-login">
            <div class="login__block__header">
                <i class="zmdi zmdi-account-circle"></i>
                <span>Hi there! Please Sign in</span>
            </div>

            <div class="login__block__body">
                <form action="{{ path('login_check') }}" method="post">
                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input type="text" class="form-control" name="_username" value="{{ last_username }}">
                        <label>Email Address</label>
                        <i class="form-group__bar"></i>
                    </div>

                    <div class="form-group form-group--float form-group--centered form-group--centered">
                        <input type="password" class="form-control" name="_password">
                        <label>Password</label>
                        <i class="form-group__bar"></i>
                    </div>

                    {% if error %}
                        <p class="m-b-0">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}

                    <button type="submit" class="btn btn--light btn--icon m-t-15"><i class="zmdi zmdi-long-arrow-right"></i></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
