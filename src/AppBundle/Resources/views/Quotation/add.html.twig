{% extends 'AppBundle::base.html.twig' %}

{% block title parent() ~ ' - ' ~ 'quotation-add.meta-title'|trans %}

{% block header %}
    <section id="content">
        <div class="content__header">
            <h2>Devis</h2>
        </div>
    </section>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card__header action-header">
            <div class="action-header__label">Ajouter un devis</div>
        </div>
        <div class="card__body m-t-30">
            {{ form_start(form) }}
            {{ form_row(form.client) }}
            {{ form_row(form.date) }}
            {{ form_row(form.amount) }}
            {{ form_row(form.description) }}
            <button class="btn btn-default btn-block" type="submit">Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
